datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:prisma@localhost:5432/postgres?schema=sql_load_test"
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime
  updatedAt DateTime
  content   String?
  post      Int
  author    Int
  User      User     @relation(fields: [author], references: [id])
  Post      Post     @relation(fields: [post], references: [id])
  Like      Like[]

  @@index([post], name: "Comment.post")
  @@index([author], name: "Comment.author")
}

model Like {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime
  updatedAt DateTime
  comment   Int
  post      Int
  user      Int
  Comment   Comment  @relation(fields: [comment], references: [id])
  Post      Post     @relation(fields: [post], references: [id])
  User      User     @relation(fields: [user], references: [id])

  @@index([user], name: "Like.user")
  @@index([post], name: "Like.post")
  @@index([comment], name: "Like.comment")
}

model Post {
  id        Int       @default(autoincrement()) @id
  createdAt DateTime
  updatedAt DateTime
  content   String?
  author    Int
  User      User      @relation(fields: [author], references: [id])
  Comment   Comment[]
  Like      Like[]

  @@index([author], name: "Post.author")
}

model User {
  id          Int       @default(autoincrement()) @id
  createdAt   DateTime
  updatedAt   DateTime
  firstName   String    @default("")
  lastName    String    @default("")
  email       String?
  password    String?
  age         Int?
  Comment     Comment[]
  Like        Like[]
  Post        Post[]
  FriendsWith User[]    @relation("FriendShip")
  FriendOf    User[]    @relation("FriendShip")
}
